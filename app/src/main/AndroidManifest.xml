<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adrpien.tiemed">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/tiemed_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/tiemed_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tiemed">
        <activity
            android:name=".addrepair.AddRepairActivity"
            android:exported="false"
            android:label="@string/title_activity_add_repair"
            android:theme="@style/Theme.Tiemed.NoActionBar" />
        <activity
            android:name=".settings.SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".splashscreen.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:exported="false" />
        <activity
            android:name=".login.LoginActivity"
            android:exported="false" />
    </application>

</manifest>