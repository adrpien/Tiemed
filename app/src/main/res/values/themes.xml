<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tiemed" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
         Primary brand color.
        // <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorPrimaryVariant">@color/light_grey</item>
        <item name="colorOnPrimary">@color/white</item>
         Secondary brand color.
        <item name="colorSecondary">@color/mint_grey</item>
        <item name="colorSecondaryVariant">@color/dark_mint_grey</item>
        <item name="colorOnSecondary">@color/light_mint_grey</item>
         Status bar color.
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
         Customize your theme here.
    </style>
<!--    Required for  calling onCreateOptionsMenu after onCreate of activity -->
    <style name="Theme.Tiemed.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Tiemed.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Tiemed.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>