<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".feature_inspections.presentation.EditInspectionFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inspectionIdTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inspectionIdTextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/id" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/DividierTitle"
                android:text="@string/device" />

            <View
                style="@style/Divider" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inspectionNameTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inspectionNameTextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inspectionManufacturerTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inspectionManufacturerTextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Manufacturer" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inspectionModelTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inspectionModelTextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Model" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inspectionINTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inspectionINTextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Inventory number" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inspectionSNTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inspectionSNTextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Serial number" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/DividierTitle"
                android:text="Localization" />

            <View style="@style/Divider" />


            <Spinner
                android:id="@+id/inspectionHospitalSpinner"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"

                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inspectionWardTextInputLayout"
                style="@style/EditTextStyle"
                android:layout_margin="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inspectionWardTextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ward" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/DividierTitle"
                android:text="Inspection" />

            <View
                style="@style/Divider" />

            <TextView
                android:id="@+id/textView14"
                style="@style/SectionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Electrical safety test" />

            <RadioGroup
                android:id="@+id/inspectionESTRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/ESTPassedRadioButton"
                    style="@style/RadioButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Passed" />

                <RadioButton
                    android:id="@+id/ESTFailedRadioButton"
                    style="@style/RadioButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Failed" />

                <RadioButton
                    android:id="@+id/ESTNotApplicableRadioButton"
                    style="@style/RadioButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Not Applicable" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView5"
                style="@style/SectionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="STAN" />

            <RadioGroup
                android:id="@+id/inspectionStateRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/inspectionStateAwaitingRadioButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:button="@null"
                    android:drawableBottom="?android:attr/listChoiceIndicatorSingle"
                    android:gravity="center_horizontal|bottom"
                    android:text="Awaiting"
                    android:textSize="12dp" />

                <RadioButton
                    android:id="@+id/inspectionStatePassedRadioButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"

                    android:drawableBottom="?android:attr/listChoiceIndicatorSingle"
                    android:gravity="center_horizontal|bottom"
                    android:text="Passed"
                    android:textSize="12dp" />

                <RadioButton

                    android:id="@+id/inspectionStateConditionallyPassedRadioButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"

                    android:drawableBottom="?android:attr/listChoiceIndicatorSingle"
                    android:gravity="center_horizontal|bottom"
                    android:text="Conditionally passed"
                    android:textSize="12dp" />

                <RadioButton
                    android:id="@+id/inspectionStateFailedRadioButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"

                    android:drawableBottom="?android:attr/listChoiceIndicatorSingle"
                    android:gravity="center_horizontal|bottom"
                    android:text="Failed"
                    android:textSize="12dp" />

                <RadioButton
                    android:id="@+id/inspectionStateFinishedRadioButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"

                    android:drawableBottom="?android:attr/listChoiceIndicatorSingle"
                    android:gravity="center_horizontal|bottom"
                    android:text="Finished"
                    android:textSize="12dp" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Data przeglądu:" />

                <Button
                    android:id="@+id/inspectionDateButton"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Inspection date" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/signatureImageButton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerInside"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>